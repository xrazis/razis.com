<% if (images) { %>
    <section class="py-5">
        <div class="container">
            <div class="mx-auto">
                <div id="roomPhotosCarousel" class="carousel slide mb-3" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <% images.forEach((image, index) => { %>
                            <% if (index === 0) { %>
                                <button type="button" data-bs-target="#roomPhotosCarousel"
                                        data-bs-slide-to="<%= index %>"
                                        class="active" aria-current="true" aria-label="Slide <%= index %>"></button>
                            <% } else { %>
                                <button type="button" data-bs-target="#roomPhotosCarousel"
                                        data-bs-slide-to="<%= index %>" aria-label="Slide <%= index %>"></button>
                            <% } %>
                        <% }); %>
                    </div>
                    <div class="carousel-inner border-radius-sm">
                        <% images.forEach((image, index) => { %>
                            <% if (index === 0) { %>
                                <div class="carousel-item active">
                                    <img class="d-block w-100"
                                         src="/images/indoors/<%= route %>/<%= image %>"
                                         alt="<%= image.replace(/\.jpg/, '') %>"/>
                                </div>
                            <% } else { %>
                                <div class="carousel-item">
                                    <img class="d-block w-100"
                                         src="/images/indoors/<%= route %>/<%= image %>"
                                         alt="<%= image.replace(/\.jpg/, '') %>"/>
                                </div>
                            <% } %>
                        <% }); %>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#roomPhotosCarousel"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#roomPhotosCarousel"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </section>
<% } %>
