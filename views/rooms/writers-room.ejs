<section class="py-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 ms-auto me-auto">
                <h6 class="opacity-7 text-uppercase font-weight-bolder text-sm"><%= t('room.the-room') %></h6>
                <h3 class="title mb-4"><%= t('writers-room.title') %></h3>
                <p class="text-dark">
                    <%= t('writers-room.desc.1') %>
                    <br> <br>
                    <%= t('writers-room.desc.2') %>
                    <br> <br>
                    <%= t('writers-room.desc.3') %>
                </p>
            </div>
        </div>
    </div>

    <section class="py-5">
        <div class="container">
            <div class="row min-vh-25">
                <div class="col-sm-4 col-5 mb-sm-0 mb-3">
                    <div style="background-image: url(/images/indoors/writers-room/wr-bath.jpg)"
                         class="w-100 h-100 border-radius-lg bg-cover"></div>
                </div>
                <div class="col-sm-3 col-7 mb-sm-0 mb-3">
                    <div style="background-image: url(/images/indoors/writers-room/wr-tree.jpg); background-position:
                     center"
                         class="w-100 h-100 border-radius-lg bg-cover"></div>
                </div>
                <div class="col-sm-5 mb-sm-0 mb-3">
                    <div style="background-image: url(/images/indoors/writers-room/wr-bed.jpg); background-position: center"
                         class="w-100 h-100 border-radius-lg bg-cover"></div>
                </div>
            </div>
            <div class="row min-vh-25 mt-4">
                <div class="col-sm-3 col-7 mb-sm-0 mb-3">
                    <div style="background-image: url(/images/indoors/writers-room/wr-door.jpg); background-position:
                     bottom"
                         class="w-100 h-100 border-radius-lg bg-cover"></div>
                </div>
                <div class="col-sm-5 col-5 mb-sm-0 mb-3">
                    <div style="background-image: url(/images/indoors/writers-room/wr-counter.jpg)"
                         class="w-100 h-100 border-radius-lg bg-cover"></div>
                </div>
                <div class="col-sm-4 mb-sm-0 mb-3">
                    <div style="background-image: url(/images/indoors/writers-room/wr-balcony.jpg);
                    background-position: center"
                         class="w-100 h-100 border-radius-lg bg-cover"></div>
                </div>
            </div>
        </div>
    </section>
